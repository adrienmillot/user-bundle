<table>
    <thead>
        <tr>
            <th>{{ 'form.label.username' | trans({}, 'User') | capitalize }}</th>
            <th>{{ 'form.label.actions' | trans({}, 'Global') | capitalize }}</th>
        </tr>
    </thead>
    <tbody>
        {% for user in pagination %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{{ 'link.button.show' | trans({}, 'Global') | capitalize }}</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ 'link.button.edit' | trans({}, 'Global') | capitalize }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
