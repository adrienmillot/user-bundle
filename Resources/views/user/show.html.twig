{% extends '@User/base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>{{ user }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
        </tbody>
    </table>

    {{ render_profile(user  ) }}

    <a href="{{ path('user_index') }}">{{ 'link.button.back_to_list' | trans({}, 'Global') | capitalize }}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ 'link.button.edit' | trans({}, 'Global') | capitalize }}</a>

    {{ include('@User/user/_delete_form.html.twig') }}
{% endblock %}
